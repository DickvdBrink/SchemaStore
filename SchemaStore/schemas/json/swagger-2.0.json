{
    "title": "A JSON Schema for Swagger 2.0 API.",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": false,

    "definitions": {
        "info": {
            "type": "object",
            "description": "General information about the API.",
            "properties": {
                "version": {
                    "type": "string",
                    "description": "A semantic version number of the API."
                },
                "title": {
                    "type": "string",
                    "description": "A unique and precise title of the API."
                },
                "description": {
                    "type": "string",
                    "description": "A longer description of the API. Should be different from the title."
                },
                "termsOfService": {
                    "type": "string",
                    "description": "The terms of service for the API."
                },
                "contact": {
                    "type": "string",
                    "description": "Contact information for the owners of the API."
                },
                "license": {
                    "type": "string"
                },
                "licenseUrl": {
                    "type": "string",
                    "format": "uri"
                }
            }
        },
        "mimetype": {
            "type": "string",
            "pattern": "^[a-z0-9-]+/[a-z0-9-+]+$",
            "description": "The MIME type of the HTTP message."
        },
        "httpmethod": {
            "type": "object",
            "properties": {
                "summary": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "nickname": {
                    "type": "string"
                },
                "produces": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/mimetype"
                    }
                },
                "parameters": {
                    "type": "array",
                    "additionalItems": {
                        "$ref": "#/definitions/parameters"
                    }
                },
                "responses": {
                    "type": "object",
                    "patternProperties": {
                        "^[0-9]+$": {
                            "$ref": "#/definitions/response"
                        }
                    },
                    "properties": {
                        "default": {
                            "$ref": "#/definitions/response"
                        }
                    }
                }
            }
        },
        "parameters": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "kind": {
                    "type": "string"
                },
                "summary": {
                    "type": "string"
                },
                "required": {
                    "type": "boolean"
                },
                "type": {
                    "type": "string"
                },
                "items": {
                    "type": "string"
                },
                "format": {
                    "type": "string"
                }
            }
        },
        "response": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "description": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "items": {
                    "type": "object",
                    "additionalProperties": true
                }
            }
        }
    },

    "required": [ "swagger", "info", "host" ],

    "properties": {
        "swagger": {
            "type": "number",
            "enum": [ 2.0 ],
            "description": "The Swagger version of this document."
        },
        "info": {
            "$ref": "#/definitions/info"
        },
        "host": {
            "type": "string",
            "format": "uri",
            "description": "The fully qualified URI to the host of the API."
        },
        "basePath": {
            "type": "string",
            "pattern": "^/",
            "description": "The base path to the API. Example: '/api'."
        },
        "schemes": {
            "type": "array",
            "description": "The transfer protocol of the API.",
            "items": {
                "type": "string",
                "enum": [ "http", "https" ]
            }
        },
        "consumes": {
            "type": "array",
            "description": "A list of MIME types accepted by the API.",
            "items": {
                "$ref": "#/definitions/mimetype"
            }
        },
        "produces": {
            "type": "array",
            "description": "A list of MIME types the API can produce.",
            "items": {
                "$ref": "#/definitions/mimetype"
            }
        },
        "paths": {
            "type": "object",
            "description": "Relative paths to the individual endpoints. They should be relative to the 'basePath'.",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "get": {
                        "$ref": "#/definitions/httpmethod"
                    },
                    "put": {
                        "$ref": "#/definitions/httpmethod"
                    },
                    "post": {
                        "$ref": "#/definitions/httpmethod"
                    },
                    "delete": {
                        "$ref": "#/definitions/httpmethod"
                    }
                }
            }
        },
        "models": {
            "type": "object",
            "description": "One or more JSON objects describing the models being consumed and produced by the API.",
            "additionalProperties": {
                "$ref": "http://json-schema.org/draft-04/schema#"
            }
        }
    }
}
