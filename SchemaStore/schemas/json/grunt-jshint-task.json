{
    "title": "JSON schema for the Grunt JSHint task",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "definitions": {
        "options": {
            "description": "Set the options for JSHint",
            "anyOf": [
                { "$ref": "http://schemastore.org/schemas/json/jshintrc.json#" },
                {
                    "properties": {
                        "jshintrc": {
                            "description": "Either a boolean value or a string containing the file name of the jshintrc file.",
                            "type": [ "boolean", "string" ],
                            "enum": [ true ]
                        }
                    }
                }
            ]
        }
    },
    "properties": {
        "options": {
            "$ref": "#/definitions/options"
        }
    },

    "allOf": [
        { "$ref": "http://schemastore.org/schemas/json/grunt-task.json" }
    ]
}
